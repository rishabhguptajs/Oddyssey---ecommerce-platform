  },
  "dependencies": {
    "@nextui-org/shared-utils": "2.0.4",
    "@nextui-org/react-utils": "2.0.10",
    "@nextui-org/use-data-scroll-overflow": "2.1.2"
  },
  "clean-package": "../../../clean-package.config.json",
